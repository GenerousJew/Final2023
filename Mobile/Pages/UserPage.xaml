<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Pages.UserPage">
    <ContentView.Content>
        <Grid>
            <StackLayout VerticalOptions="Start" Padding="10">
                <Label FontSize="16" HorizontalOptions="Center" x:Name="FullNameLabel"/>
            </StackLayout>

            <StackLayout VerticalOptions="Center" Padding="10">
                <Button Text="Профиль" Clicked="ProfileClick"/>
                <Button Text="Услуги" Clicked="ServiceClick"/>
                <Button Text="Новости" Clicked="NewsClick"/>
                <Button Text="Выйти" Clicked="ExitClick"/>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>