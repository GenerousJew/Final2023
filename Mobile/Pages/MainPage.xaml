<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.MainPage">

    <StackLayout Padding="10" VerticalOptions="Center">
        <Label Text="Логин:"/>
        <Editor x:Name="LoginEditor"/>
        <Label Text="Пароль:"/>
        <Editor x:Name="PasswordEditor"/>
        <Button Text="Войти" Clicked="EnterClick"/>
        <Button Text="Войти как гость" Clicked="GuestEnterClick"/>
        <Button Text="Зарегистрироваться" Clicked="RegistrateClick"/>
    </StackLayout>

</ContentPage>
