<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Pages.ServicePage">
    <ContentPage.Content>
        <StackLayout>
            <CollectionView Margin="5" HorizontalScrollBarVisibility="Always" x:Name="ServiceList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Margin="5" Padding="5" Orientation="Vertical">
                            <Label Text="{Binding code, StringFormat='Код: {0}'}"/>
                            <Label Text="{Binding name, StringFormat='Название: {0}'}"/>
                            <Label Text="{Binding price, StringFormat='Цена: {0}'}"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Выйти" Margin="5" Clicked="ExitClick"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>