<Page x:Class="Desktop.Pages.CaseNumberPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CaseNumberPage">

    <Grid>
        <StackPanel Width="675" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="10">
                <TextBox x:Name="FirstCaseNumberText" Width="200" IsReadOnly="True" FontSize="24"/>
                <TextBox x:Name="SecondCaseNumberText" Width="200" IsReadOnly="True" FontSize="24"/>
                <TextBox x:Name="ThirdCaseNumberText" MaxLength="6" Width="200" FontSize="24"/>
            </StackPanel>

            <Button Content="Ввести номер кейса" Margin="10" FontSize="24" Background="Transparent" Click="EnterCaseClick"/>
        </StackPanel>
    </Grid>
</Page>
