<Window x:Class="Desktop.Windows.QualityControlWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop.Windows" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="QualityControlWIndow" MaxHeight="675" MaxWidth="1200" MinHeight="675" MinWidth="1200">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock Text="Ср. отклонение:" Margin="10" FontSize="18"/>
                <TextBlock Text="Коэф. вариации:" Margin="10" FontSize="18"/>
            </StackPanel>

            <StackPanel>
                <TextBlock x:Name="SText" Text="0" Margin="10" FontSize="18"/>
                <TextBlock x:Name="XText" Text="0" Margin="10" FontSize="18"/>
            </StackPanel>
        </StackPanel>

        <lvc:CartesianChart x:Name="Diagram" Height="450"/>
    </StackPanel>
</Window>
